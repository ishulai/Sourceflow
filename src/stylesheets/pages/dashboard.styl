@require "../global"

html, body
	overflow hidden

.sidebar
	width 60px
	background $bgcolor
	color #fff
	position absolute
	top 0
	left 0
	bottom 0
	
	ul
		list-style none
		margin 0
		padding 0
		
		a, a:active, a:visited
			color #fff
			text-decoration none
		
			li
				margin 0
				padding 0
				height 25px
				cursor pointer
				text-align center
				padding 20px 0
				color #fff
				text-decoration none
				
				i
					height 30px
				
				div
					padding 5px 0
					text-decoration none
					display none
				
			li:hover
				background $bghovercolor